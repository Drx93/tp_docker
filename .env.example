# Example .env - DO NOT COMMIT SECRETS
# Copy to .env and fill values
PORT=3000
# Postgres connection string (postgres://user:pass@host:port/dbname)
DATABASE_URL=
# MongoDB URI (if using Mongo features)
MONGO_URI=
# JWT secret used to sign access tokens (set a long random string)
JWT_SECRET=change_this_to_a_long_random_secret
# CORS controls
CORS_ALLOW_ALL=true
# Access token expiry (optional)
ACCESS_EXPIRES=10m
